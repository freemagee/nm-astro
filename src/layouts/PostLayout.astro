---
import BaseHeader from "@components/BaseHeader";
import Nav from "@components/Nav";
import { AstroPostContent } from "@typings";

const { content } = Astro.props;
// ! typing Astro content as IPostProps does not work. date prop is a string not a Date as expected.
const { title, description, date, url } = content as AstroPostContent;
---

<html lang="en">
  <head>
    <BaseHeader
      pageTitle={title}
      pageDescription={description}
      pagePermalink={url}
    />
  </head>
  <body>
    <Nav />
    <h1>{title}</h1>
    <slot />
    <p>Written on: {new Date(date).toDateString()}</p>
  </body>
</html>
