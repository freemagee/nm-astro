---
import BaseHead from "@components/BaseHead";
import BaseLayout from "@components/BaseLayout.astro";
import { AstroPostContent } from "@typings";

import "../styles/global.css";

const { content } = Astro.props;
// ! typing Astro content as IPostProps does not work. date prop is a string not a Date as expected.
const { title, description, date, url } = content as AstroPostContent;
---

<html lang="en">
  <head>
    <BaseHead {title} {description} permalink={url} />
  </head>
  <BaseLayout>
    <h1>{title}</h1>
    <slot />
    <p>Written on: {new Date(date).toDateString()}</p>
  </BaseLayout>
</html>
